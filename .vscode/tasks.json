{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build C (gcc)",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-Wall",
        "-Wextra",
        "-Wpedantic",
        "-std=c11",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "run",
      "type": "shell",
      "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "dependsOn": "build C (gcc)"
    }
  ]
}
